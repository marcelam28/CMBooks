@model IList<CMBooks.DataLayer.Book>

<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
        height: 200px;
    }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: auto;
        }

    div.desc {
        padding: 15px;
        text-align: center;
    }
</style>



    @foreach (var book in Model)
    {

        <div class="gallery">
            <img src="@book.PictureUrl" width="600px" height="400px">
            <div class="desc">@book.Title</div>
        </div>
    }

