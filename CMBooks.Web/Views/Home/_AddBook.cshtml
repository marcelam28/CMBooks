@model CMBooks.BusinessLogic.Models.BookViewModel
@Styles.Render("~/Content/login")
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<style>
    /*datepicker*/
    .datepicker {
        display: block;
        width: 100%;
        background: transparent;
        font-family: Montserrat-Regular;
        font-size: 18px;
        color: #555555;
        line-height: 1.2;
        padding: 0 26px;
        padding-bottom: 10px;
        border-bottom: 1px solid #462c14;
    }

    .datepicker-label {
        font-family: Montserrat-Regular;
        font-size: 13px;
        color: #999999;
        line-height: 1.2;
        display: block;
        position: absolute;
        pointer-events: none;
        width: 100%;
        padding-left: 24px;
        left: 0;
        top: 14px;
        -webkit-transition: all 0.4s;
        -o-transition: all 0.4s;
        -moz-transition: all 0.4s;
        transition: all 0.4s;
    }

    .genre {
        width: -webkit-fill-available;
        border: 0px;
        background-color: transparent;
        border-bottom: 1px solid #462c14;
        padding-bottom: 10px;
        padding-left: 20px;
        font-size: 18px;
        outline: 0px;
    }

    .genre-label, .photo-label {
        font-family: Montserrat-Regular;
        font-size: 13px;
        color: #999999;
        line-height: 1.2;
        display: block;
        position: absolute;
        pointer-events: none;
        width: 100%;
        padding-left: 24px;
        left: 0;
        top: 14px;
        -webkit-transition: all 0.4s;
        -o-transition: all 0.4s;
        -moz-transition: all 0.4s;
        transition: all 0.4s;
    }
    .add-photo {
        height: 75px;
        width: 100%;
        padding-bottom: 11px;
        font-size: 17px;
        border-radius: 0px;
    }

    .add-input{
        height:75px;
    }
</style>
<div class="modal right fade" id="add-book" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
    <div class="modal-dialog add-book-modal" role="document">
        <div class="modal-content" style="height:auto">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel2">Add Book</h4>
            </div>

            <div class="modal-body" style="padding:0px">
                <div class="limiter">
                    <div class="container-login100">
                        <div class="wrap-login100" style="width:max-content !important;flex-direction: initial !important">
                            <form class="login100-form validate-form" style="padding-top:0px !important" method="POST">

                                <div class="wrap-input100 validate-input add-input">
                                    <input class="input100" type="text" name="title" id="title">
                                    <span class="focus-input100"></span>
                                    <span class="label-input100">Title</span>
                                </div>

                                <div class="wrap-input100 validate-input add-input">
                                    <input class="input100" type="text" name="author" id="author">
                                    <span class="focus-input100"></span>
                                    <span class="label-input100">Author</span>
                                </div>

                                <div class="wrap-input100 validate-input add-input">
                                    <input class="datepicker" type="text" name="publication-date" readonly value=@DateTime.Now.AddYears(-200) id="datepicker">
                                    <span class="focus-input100"></span>
                                    <span class="datepicker-label">Publication date</span>
                                </div>

                                <div class="wrap-input100 validate-input add-input">
                                    <input type="number" class="input100" name="pages" id="pages">
                                    <span class="focus-input100"></span>
                                    <span class="label-input100">Number of pages</span>
                                </div>

                                <div class="wrap-input100 validate-input add-input">
                                    <textarea class="input100" name="description" id="description"  maxlength="1024"></textarea>
                                    <span class="focus-input100"></span>
                                    <span class="label-input100">Description</span>
                                </div>

                                <div class="wrap-input100 validate-input add-input">
                                    <select name="genre" id="genre" class="genre">
                                        <option value="Romantic">Romance</option>
                                        <option value="Drama">Drama</option>
                                        <option value="Horror">Horror</option>
                                        <option value="Mistery">Mistery</option>
                                        <option value="Fantastic">Fantastic</option>
                                    </select>
                                    <span class="focus-input100"></span>
                                    <span class="genre-label">Genre</span>
                                </div>

                                <div class="wrap-input100 validate-input add-photo">
                                    <input id="image-file" type="file" value="Upload Photo" accept=".jpg,.jpeg,.png" />
                                    <span class="focus-input100"></span>
                                    <span class="photo-label">Photo</span>
                                </div>

                                <div class="container-login100-form-btn">
                                    <input type="button" class="login100-form-btn" value="Add" onclick="addBook()">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div><!-- modal-content -->
        </div><!-- modal-dialog -->
    </div><!-- modal -->
</div>
<script>
    function addBook()
    {
        debugger;
        EasyLoading.show();
        var title = $("#title").val();
        var author = $("#author").val();
        var publicationDate = $('#datepicker').val();
        var pages = $("#pages").val();
        var description = $("#description").val();
        var genre = $('#genre').val();
        var photo = document.getElementById("image-file").files[0];

        var formData = new FormData();
        formData.append("Title", title);
        formData.append("Author", author);
        formData.append("PublicationDate", publicationDate);
        formData.append("Pages", pages);
        formData.append("Description", description);
        formData.append("Genre", genre);
        formData.append("PictureUrl", photo);
       
        AjaxHelper.postFile("Book/CreateBook",
            formData,
            function (response) {
                EasyLoading.hide();
                if (response.Success == true) {
                    if (response.StatusCode == 1) {
                        toastr.success("Book added successfully!");
                        $("#add-book").modal('hide');
                        $("#title").val('');
                        $("#author").val('');
                        $('#datepicker').val('');
                        $("#pages").val('');
                        $("#description").val('');
                        $('#genre').val('');
                        
                    }
                }
                else {
                    if (response.StatusCode == -6) {
                        toastr.error("Error adding book!");
                    }
                    
                }
            },
            function () {
                EasyLoading.hide();
                toastr.error("Unable to cadd book!");
            }
        )
    }
</script>
