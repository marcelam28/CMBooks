@model IList<CMBooks.DataLayer.Book>
@{
    ViewBag.Title = "Home Page";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Account/Index");
    }

}

<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    /* Style the side navigation */
    .sidenav {
        height: 100%;
        width: 200px;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: #111;
        overflow-x: hidden;
    }


        /* Side navigation links */
        .sidenav button {
            color: white;
            padding: 16px;
            text-decoration: none;
            display: block;
        }

            /* Change color on hover */
            .sidenav button:hover {
                background-color: #ddd;
                color: black;
            }

    /* Style the content */
    .content {
        margin-left: 200px;
        padding-left: 20px;
    }

   
</style>

    <div class="sidenav">
        <button onclick="filter('')">All</button>
        <button onclick="filter('Romantic')">Romantic</button>
        <button onclick="filter('Mistery')">Mistery</button>
        <button onclick="filter('Horror')">Horror</button>
    </div>

    <div class="content">
        <div id="partial-view">
            @Html.Partial("_BooksGallery",Model);
        </div>
    </div>

<script>
    function filter(genre) {
        AjaxHelper.getViewWithoutData("/Home/Filter?genre=" + genre,
            function (result) {
                $("#partial-view").html(result);
            },
            function (err) {
            }
        )
    }
</script>
