@model CMBooks.Models.UserViewModel
@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/login")
@Scripts.Render("~/bundles/register")
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            @*<form class="login100-form validate-form" method="post">*@
            @using (Html.BeginForm("Action", "Controller", FormMethod.Post, new { @class = "login100-form" }))
            {
                <span class="login100-form-title p-b-43">
                    Sign Up!
                </span>

                <div class="wrap-input100 validate-input">
                    @*<input class="input100" type="text" name="FirstName" id="firstName">*@
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "input100" } })
                    <span class="focus-input100"></span>
                    <span class="label-input100">First Name</span>
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>

                <div class="wrap-input100 validate-input">
                    <input class="input100" type="text" name="LastName" id="lastName">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Last Name</span>
                    @*  <span>@Html.ValidationMessageFor(model => model.LastName)</span>*@
                </div>

                <div class="wrap-input100 validate-input">
                    <input class="datepicker" type="text" name="Birthdate" readonly value=@DateTime.Now.AddYears(-21) id="datepicker">
                    <span class="focus-input100"></span>
                    <span class="datepicker-label">Birthdate</span>
                </div>

                <div class="wrap-input100 validate-input">
                    <input class="input100" type="text" name="Email" id="email">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Email</span>
                    @*   <span>@Html.ValidationMessageFor(model => model.Email)</span>*@
                </div>

                <div class="wrap-input100 validate-input">
                    <input class="input100" type="password" name="Password" id="password">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Password</span>
                    @*<span>@Html.ValidationMessageFor(model=> model.Password)</span>*@
                </div>

                <div class="container-login100-form-btn">
                    <input type="button" class="login100-form-btn" onclick="register()" value="Sign Up">
                </div>
                @*</form>*@
            }
            <div class="login100-more" style="background-image: url('../../Content/images/blur-book-stack-books-590493.jpg');">
                <div class="container">
                    <div class="logo-div">
                        <img src="~/Content/images/open-book.png" style="height:100px; display:inline-block" />
                        <h1 style="display:inline-block;vertical-align: middle;font-size:60px;color:#462c14">CMBooks</h1><br />
                        <i style="font-size:30px">“Books are a uniquely portable magic.” -</i><br />
                        <p style="font-size:15px; color:#fbfbfb">― Stephen King, On Writing: A Memoir of the Craft</p>
                    </div>
                </div>
                @*<img src="~/Content/images/pexels-photo-2.jpeg" style="width:100%;height:100%" />*@
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            $("#datepicker").datepicker({
                format: "dd/mm/yyyy",
                autoclose: true,
                orientation: "bottom"
            }).on("changeDate", function () {
            })
        });
    </script>
}